<div id="signupModal" class="modal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header text-center">
          <h3 class="modal-title w-100">Sign up</h3>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body mx-auto" style="width: 400px;">
          <div class="container-fluid">
  
            <form method="POST" action="/user/new" autocomplete="off">
            <!-- first name + last name -->
              <div class="row">
                <div class="col-md-6">
                <div class="form-group">
                  <label for="firstName">
                    First Name
                  </label>
                  <input type="text" class="form-control" name="firstName" placeholder="First Name" required>
                </div>
                </div>
                  <div class="col-md-6">
                    <div class="form-group">
                    <label for="lastName">
                      Last Name
                    </label>
                    <input type="text" class="form-control" name="lastName" placeholder="Last Name" required>
                  </div>
                </div>
             </div><br>
  
              <!-- email address -->
              <div class="row">
                <div class="col-md-12">
                <div class="form-group">
                 <label for="emailAddress">
                   Email Address
                 </label>
                  <input type="email" class="form-control" name="emailAddress" placeholder="Enter email" required>
                 </div>
                </div>
              </div><br>
  
              <!-- password -->
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label for="password">
                      Password
                    </label>
                    <input type="password" class="form-control" name="password" placeholder="Password" required>
                  </div>
                </div>
              </div><br>
  
              <!-- TO-DO: add function to verify passwords match  -->
              <!-- confirm password -->
              <div class="row">
                <div class="col-md-12">
                 <div class="form-group">
                   <label for="confirmPassword">
                     Password
                   </label>
                   <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm Password" required> 
                  </div>
                </div>
              </div><br>
  
              <!-- subscribe to newsletter-->
              <div class="form-check">
                <label class="form-check-label" for="newsletterCheck">
                  Subscribe to our newsletter
                </label>
                <input class="form-check-input" type="checkbox" name="newsletterCheck">
              </div><br>
  
            <!-- sign up or close -->
            <div class="modal-footer">
              <div class="d-grid gap-2 col-12 mx-auto">
              <button type="submit" id="sign-up-button" class="btn btn-primary">
                Sign Up
              </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>