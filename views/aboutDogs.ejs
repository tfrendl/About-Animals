<%- include('partials/header.ejs') %>

<div id="displayBreeds" class="customSelect">
  <select id="breeds" name="breeds">
    <option> Select Breed </option>
      <% dogData.forEach(dogData => { %>
        <option value="<%= dogData.id %>"><%= dogData.name %></option>
      <% }) %>
  </select>
</div>

<!-- Modal container using Bootstrap to display breed info -->
<div id="breedInfoModal" class="modal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Dog Breed Info</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- placeholder for breed info -->
        <div class="row d-flex align-items-center justify-content-center">
          <div class="col-md-6">
            <div class="text-dark" id="breedInfo"></div>
          </div>
          <div class="col-md-6">
            <div class="text-dark" id="breedDetails"></div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
    </div>
  </div>
</div>
</div>
</section>

